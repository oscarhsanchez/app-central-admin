{% extends 'base.html.twig' %}

{% block page_title %}{{ 'menu.title.security_submodules'|trans }}{% endblock %}
{% block page_breadcrumb %}
    <li>{{ 'menu.title.configuration'|trans }}</li>
    <li class="active">
        <strong>{{ 'menu.title.security_submodules'|trans }}</strong>
    </li>
{% endblock %}

{% block body %}
    <div class="ibox">
        <div class="ibox-title">
            <h5>{{ 'menu.title.security_submodules'|trans }}</h5>
        </div>
        <div class="ibox-content">

            {% include 'ESocialUtilBundle:flash-messages:_flash.messages.html.twig' %}

            <div class="margin-b">
                <a class="btn btn-white" title="{{ 'security_submodule.buttons.add'|trans }}" href="{{ path('security_submodule_add') }}" onclick="loadAjaxFormPage(this, null, null, security_submodule_list_reload); return false;">
                    <span class="glyphicon glyphicon-plus"></span>
                    <strong>{{ 'security_submodule.buttons.add'|trans }}</strong>
                </a>
            </div>

            <table id="dt-security_submodule-list" class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th class="datatable-chk-cell"><input type="checkbox" class="i-checks datatable-chk-select-all" value="all" /></th>
                    <th>{{ 'form.security_submodule.label.code'|trans }}</th>
                    <th>{{ 'form.security_submodule.label.name'|trans }}</th>
                    <th>{{ 'form.security_submodule.label.active'|trans }}</th>
                    <th>{{ 'form.label.actions'|trans }}</th>
                </tr>
                </thead>
            </table>

        </div>
    </div>
    <script type="text/javascript">
        var security_submodule_list = null;
        $(document).ready(function() {
            var table_columns = [
                {
                    "mData": function (source) {
                        return '<input type="checkbox" class="i-checks" value="'+source.token+'" />';
                    }
                },
                {"mData": "code"},
                {"mData": "name"},
                {
                    "mData": function (source){
                        return source.active ? '<span class="glyphicon glyphicon-ok"></span>' : '';
                    }
                },
                {
                    "mData": function (source){
                        var actions = '<a class="btn btn-primary btn-xs" title="{{ 'security_submodule.buttons.edit'|trans }}" onclick="loadAjaxFormPage(this, null, null, security_submodule_list_reload); return false;" href="' + Routing.generate('security_submodule_edit', { _locale: '{{ app.request.locale }}', id: encodeURIComponent(source.token) }) + '"><span class="glyphicon glyphicon-edit"></span> &nbsp; {{ 'form.actions.edit'|trans }}</a>&nbsp; ';
                        if (source.active)
                            actions += '<a class="btn btn-primary btn-xs" href="javascript:void(0)" onclick="bootbox.confirm(\'Seguro que desea desactivar el registro?\', function(confirmed){ if(confirmed) executeAjax(\'' + Routing.generate('security_submodule_action', { action: 'deactivate', _locale: '{{ app.request.locale }}', id: encodeURIComponent(source.token) }) + '\', null, null, security_submodule_list_reload); }); return false;"><span class="glyphicon glyphicon-remove"></span> &nbsp; {{ 'form.actions.deactivate'|trans }}</a>&nbsp; ';
                        else
                            actions += '<a class="btn btn-primary btn-xs" href="javascript:void(0)" onclick="bootbox.confirm(\'Seguro que desea activar el registro?\', function(confirmed){ if(confirmed) executeAjax(\'' + Routing.generate('security_submodule_action', { action: 'activate', _locale: '{{ app.request.locale }}', id: encodeURIComponent(source.token) }) + '\', null, null, security_submodule_list_reload); }); return false;"><span class="glyphicon glyphicon-remove"></span> &nbsp; {{ 'form.actions.activate'|trans }}</a>&nbsp; ';
                        return actions;
                    }
                }
            ];

            jQuery(document).ready(function(){
                security_submodule_list = TableManaged.init(
                        '#dt-security_submodule-list',
                        '{{ url('security_submodule_list_json') }}',
                        null,
                        [],
                        table_columns,
                        '{{ url('datatables_i18n_fragment', { language: app.request.locale }) }}'
                );
            });
        });

        function security_submodule_list_reload(result){
            if (result && result.message){
                var alertType = result.result == 1 ? 'success' : 'danger';
                $(security_submodule_list).closest('.dataTables_wrapper').prepend(Notification.alert(alertType, result.message));
            }
            security_submodule_list.ajax.reload();
        }

    </script>
{% endblock %}
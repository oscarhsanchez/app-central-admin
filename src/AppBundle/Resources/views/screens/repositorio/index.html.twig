{% extends 'base.html.twig' %}

{% block page_title %}{{ 'menu.title.repository'|trans }}{% endblock %}
{% block page_breadcrumb %}
    <li class="active">
        <strong>{{ 'menu.title.repository'|trans }}</strong>
    </li>
{% endblock %}

{% block body %}
    <div class="ibox">
        <div class="ibox-title">
            <h5>{{ 'menu.title.repository'|trans }}</h5>
        </div>
        <div class="ibox-content">

            {% include 'ESocialUtilBundle:flash-messages:_flash.messages.html.twig' %}

            <div class="margin-b">
                <a class="btn btn-white" href="{{ path('archivo_add') }}" title="{{ 'screens.repository.buttons.add'|trans }}" onclick="loadAjaxFormPage(this, null, null, repository_list_reload); return false;">
                    <span class="glyphicon glyphicon-plus"></span>
                    <strong>{{ 'screens.repository.buttons.add'|trans }}</strong>
                </a>
            </div>

            <table id="dt-repository-list" class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th class="datatable-chk-cell"><input type="checkbox" class="i-checks datatable-chk-select-all" value="all" /></th>
                    <th>{{ 'form.archivo.label.nombre'|trans }}</th>
                    <th>{{ 'form.archivo.label.url'|trans }}</th>
                    <th>{{ 'form.label.actions'|trans }}</th>
                </tr>
                </thead>
            </table>

        </div>
    </div>
    <script type="text/javascript">
        var repository_list = null;
        $(document).ready(function() {
            var table_columns = [
                {
                    "mData": function (source) {
                        return '<input type="checkbox" class="i-checks" value="'+source.token+'" />';
                    }
                },
                {"mData": "nombre"},
                {
                    "mData": function (source){
                        return '<a href="'+source.url+'" target="_blank">'+source.url+'</a>';
                    }
                },
                {
                    "mData": function (source){
                        var actions = '<a class="btn btn-primary btn-xs" title="{{ 'screens.repository.buttons.edit'|trans }}" onclick="loadAjaxFormPage(this, null, null, repository_list_reload); return false;" href="' + Routing.generate('archivo_edit', { _locale: '{{ app.request.locale }}', id: encodeURIComponent(source.token) }) + '"><span class="glyphicon glyphicon-edit"></span> &nbsp; {{ 'form.actions.edit'|trans }}</a>&nbsp; ';
                        actions += '<a class="btn btn-primary btn-xs" href="javascript:void(0)" onclick="bootbox.confirm(\'Seguro que desea eliminar el registro?\', function(confirmed){ if(confirmed) executeAjax(\'' + Routing.generate('archivo_delete', { _locale: '{{ app.request.locale }}', id: encodeURIComponent(source.token) }) + '\', null, null, repository_list_reload); }); return false;"><span class="glyphicon glyphicon-remove"></span> &nbsp; {{ 'form.actions.delete'|trans }}</a>&nbsp; ';
                        return actions;
                    }
                }
            ];

            jQuery(document).ready(function(){
                repository_list = TableManaged.init(
                        '#dt-repository-list',
                        '{{ url('archivo_list_json') }}',
                        null,
                        [],
                        table_columns,
                        '{{ url('datatables_i18n_fragment', { language: app.request.locale }) }}'
                );
            });
        });

        function repository_list_reload(result){
            if (result && result.message){
                var alertType = result.result == 1 ? 'success' : 'danger';
                $(repository_list).closest('.dataTables_wrapper').prepend(Notification.alert(alertType, result.message));
            }
            repository_list.api().ajax.reload();
        }

    </script>
{% endblock %}
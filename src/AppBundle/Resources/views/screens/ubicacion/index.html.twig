{% extends 'base.html.twig' %}

{% block page_title %}{{ 'menu.title.locations'|trans }}{% endblock %}
{% block page_breadcrumb %}
    <li>{{ 'menu.title.configuration'|trans }}</li>
    <li class="active">
        <strong>{{ 'menu.title.locations'|trans }}</strong>
    </li>
{% endblock %}

{% block body %}
    <div class="ibox">
        <div class="ibox-title">
            <h5>{{ 'menu.title.locations'|trans }}</h5>
        </div>
        <div class="ibox-content">

            {% include 'ESocialUtilBundle:flash-messages:_flash.messages.html.twig' %}

            <div class="margin-b">
                <a class="btn btn-white" href="{{ path('ubicacion_add') }}">
                    <span class="glyphicon glyphicon-plus"></span>
                    <strong>{{ 'location.buttons.add'|trans }}</strong>
                </a>
            </div>

            <table id="dt-location-list" class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th class="datatable-chk-cell"><input type="checkbox" class="i-checks datatable-chk-select-all" value="all" /></th>
                    <th>{{ 'form.ubicacion.label.pk_ubicacion'|trans }}</th>
                    <th>{{ 'form.ubicacion.label.ubicacion'|trans }}</th>
                    <th>{{ 'form.ubicacion.label.categoria'|trans }}</th>
                    <th>{{ 'form.ubicacion.label.trafico_vehicular'|trans }}</th>
                    <th>{{ 'form.ubicacion.label.trafico_transeuntes'|trans }}</th>
                    <th>{{ 'form.ubicacion.label.nivel_socioeconomico'|trans }}</th>
                    <th>{{ 'form.ubicacion.label.estatus'|trans }}</th>
                    <th>{{ 'form.label.actions'|trans }}</th>
                </tr>
                </thead>
            </table>

        </div>
    </div>
    <script type="text/javascript">
        var location_list = null;
        $(document).ready(function() {
            var table_columns = [
                {
                    "mData": function (source) {
                        return '<input type="checkbox" class="i-checks" value="'+source.token+'" />';
                    }
                },
                {"mData": "pk_ubicacion"},
                {"mData": "ubicacion"},
                {"mData": "categoria"},
                {"mData": "trafico_vehicular"},
                {"mData": "trafico_transeuntes"},
                {"mData": "nivel_socioeconomico"},
                {"mData": "estatus"},
                {
                    "mData": function (source){
                        var actions = '<a class="btn btn-primary btn-xs" href="' + Routing.generate('ubicacion_edit', { _locale: '{{ app.request.locale }}', id: encodeURIComponent(source.token) }) + '"><span class="glyphicon glyphicon-edit"></span> &nbsp; {{ 'form.actions.edit'|trans }}</a>&nbsp; ';
                        actions += '<a class="btn btn-primary btn-xs" href="javascript:void(0)" onclick="bootbox.confirm(\'Seguro que desea eliminar el registro?\', function(confirmed){ if(confirmed) executeAjax(\'' + Routing.generate('ubicacion_delete', { _locale: '{{ app.request.locale }}', id: encodeURIComponent(source.token) }) + '\', null, null, location_list_reload); }); return false;"><span class="glyphicon glyphicon-remove"></span> &nbsp; {{ 'form.actions.delete'|trans }}</a>&nbsp; ';
                        return actions;
                    }
                }
            ];

            jQuery(document).ready(function(){
                location_list = TableManaged.init(
                        '#dt-location-list',
                        '{{ url('ubicacion_list_json') }}',
                        null,
                        [0,8],
                        table_columns,
                        '{{ url('datatables_i18n_fragment', { language: app.request.locale }) }}'
                );
            });
        });

        function location_list_reload(result){
            if (result && result.message){
                var alertType = result.result == 1 ? 'success' : 'danger';
                $(location_list).closest('.dataTables_wrapper').prepend(Notification.alert(alertType, result.message));
            }
            location_list.api().ajax.reload();
        }

    </script>
{% endblock %}
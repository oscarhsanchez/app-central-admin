{% extends 'base.html.twig' %}

{% block page_title %}{{ 'menu.title.zones'|trans }}{% endblock %}
{% block page_breadcrumb %}
    <li>{{ 'menu.title.configuration'|trans }}</li>
    <li class="active">
        <strong>
            {{ 'menu.title.zones'|trans }}
            {% if type == 'fixing' %}
                - {{ 'menu.title.zone_fixing'|trans }}
            {% elseif type == 'monitoring' %}
                - {{ 'menu.title.zone_monitoring'|trans }}
            {% elseif type == 'installation' %}
                - {{ 'menu.title.zone_installation'|trans }}
            {% elseif type == 'lighting' %}
                - {{ 'menu.title.zone_lighting'|trans }}
            {% endif %}
        </strong>
    </li>
{% endblock %}

{% block body %}
    <div class="ibox">
        <div class="ibox-title">
            <h5>
                {{ 'menu.title.zones'|trans }}
                {% if type == 'fixing' %}
                    - {{ 'menu.title.zone_fixing'|trans }}
                {% elseif type == 'monitoring' %}
                    - {{ 'menu.title.zone_monitoring'|trans }}
                {% elseif type == 'installation' %}
                    - {{ 'menu.title.zone_installation'|trans }}
                {% elseif type == 'lighting' %}
                    - {{ 'menu.title.zone_lighting'|trans }}
                {% endif %}
            </h5>
        </div>
        <div class="ibox-content">

            {% include 'ESocialUtilBundle:flash-messages:_flash.messages.html.twig' %}

            <div class="margin-b">
                <a class="btn btn-white" title="{{ 'zone.buttons.add'|trans }}" href="{{ path('zone_add', { type: type }) }}" onclick="loadAjaxFormPage(this, null, null, zone_list_reload); return false;">
                    <span class="glyphicon glyphicon-plus"></span>
                    <strong>{{ 'zone.buttons.add'|trans }}</strong>
                </a>
            </div>

            <table id="dt-zone-list" class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th class="datatable-chk-cell"><input type="checkbox" class="i-checks datatable-chk-select-all" value="all" /></th>
                    <th>{{ 'form.zone.label.nombre'|trans }}</th>
                    <th>{{ 'form.label.actions'|trans }}</th>
                </tr>
                </thead>
            </table>

        </div>
    </div>
    <script type="text/javascript">
        var zone_list = null;
        $(document).ready(function() {
            var table_columns = [
                {
                    "mData": function (source) {
                        return '<input type="checkbox" class="i-checks" value="'+source.token+'" />';
                    }
                },
                {"mData": "nombre"},
                {
                    "mData": function (source){
                        var actions = '<a class="btn btn-primary btn-xs" title="{{ 'zone.buttons.edit'|trans }}" onclick="loadAjaxFormPage(this, null, null, zone_list_reload); return false;" href="' + Routing.generate('zone_edit', { _locale: '{{ app.request.locale }}', type: '{{ type }}', id: encodeURIComponent(source.token) }) + '"><span class="glyphicon glyphicon-edit"></span> &nbsp; {{ 'form.actions.edit'|trans }}</a>&nbsp; ';
                        actions += '<a class="btn btn-primary btn-xs" href="javascript:void(0)" onclick="bootbox.confirm(\'Seguro que desea eliminar el registro?\', function(confirmed){ if(confirmed) executeAjax(\'' + Routing.generate('zone_delete', { _locale: '{{ app.request.locale }}', type: '{{ type }}', id: encodeURIComponent(source.token) }) + '\', null, null, zone_list_reload); }); return false;"><span class="glyphicon glyphicon-remove"></span> &nbsp; {{ 'form.actions.delete'|trans }}</a>&nbsp; ';
                        return actions;
                    }
                }
            ];

            jQuery(document).ready(function(){
                zone_list = TableManaged.init(
                        '#dt-zone-list',
                        '{{ url('zone_list_json', { _type: type }) }}',
                        null,
                        [0,2],
                        table_columns,
                        '{{ url('datatables_i18n_fragment', { language: app.request.locale }) }}'
                );
            });
        });

        function zone_list_reload(result){
            if (result && result.message){
                var alertType = result.result == 1 ? 'success' : 'danger';
                $(zone_list).closest('.dataTables_wrapper').prepend(Notification.alert(alertType, result.message));
            }
            zone_list.ajax.reload();
        }

    </script>
{% endblock %}
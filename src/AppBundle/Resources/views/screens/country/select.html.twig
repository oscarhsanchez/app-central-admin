<table id="dt-country-list" class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>{{ 'form.country.label.name'|trans }}</th>
        <th>{{ 'form.label.actions'|trans }}</th>
    </tr>
    </thead>
</table>

<script type="text/javascript">
    var country_list = null;
    $(document).ready(function() {
        var table_columns = [
            {"mData": "nombre"},
            {
                "mData": function (source) {
                    return '<a class="btn btn-sm btn-primary" href="javascript:void(0)" onclick="closeThisPopup(this);selectCountry(\''+encodeURIComponent(JSON.stringify(source))+'\', \'{{ getVars|json_encode|escape  }}\')">Select</a>';
                }
            }
        ];

        jQuery(document).ready(function () {
            country_list = TableManaged.init(
                    '#dt-country-list',
                    '{{ url('country_list_json') }}',
                    null,
                    [],
                    table_columns,
                    '{{ url('datatables_i18n_fragment', { language: app.request.locale }) }}'
            );
        });
    });
</script>
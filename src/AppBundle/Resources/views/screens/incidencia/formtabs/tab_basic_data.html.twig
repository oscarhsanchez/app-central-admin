{{ form_start(form, { method: 'POST', action: entity is defined and entity.pkIncidencia is not empty ? path('incidencia_update', {id: entity.token, origin: 'list', type: type }) : path('incidencia_create', { type: type }) }) }}
<div class="row">
    <div class="col-md-6">
        <fieldset>
            <legend>{{ 'screens.incidencias.text.basic_data'|trans }}</legend>

            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.fecha_limite) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.estado_incidencia) }}
                </div>
            </div>
            {{ form_row(form.user) }}
            <fieldset class="margin-b-20">
                <legend>{{ 'form.work_order.label.medio'|trans }}</legend>
                {{ form_row(form.medio, { select_href: path('medio_select') }) }}
                <div id="incidencia-medio-ubicacion-map" style="{% if entity.medio is empty %}display:none{% endif %}; height: 200px"></div>
            </fieldset>
            {{ form_row(form.observaciones) }}

        </fieldset>

    </div>
    {% if entity.estadoIncidencia == 2 %}
    <div class="col-md-6">
        <fieldset>
            <legend>{{ 'screens.incidencias.text.close_data'|trans }}</legend>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.fecha_cierre) }}
                </div>
            </div>
            {{ form_row(form.observaciones_cierre) }}
        </fieldset>
    </div>
    {% endif %}
</div>

<div class="clearfix">
    {{ form_row(form.save) }}
</div>

{{ form_end(form) }}
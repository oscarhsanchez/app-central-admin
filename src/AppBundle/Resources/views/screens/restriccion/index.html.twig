{% extends 'base.html.twig' %}

{% block page_title %}{{ 'menu.title.restriccion'|trans }}{% endblock %}
{% block page_breadcrumb %}
    <li class="active">
        <strong><a href="{{ path('restriccion_list') }}">{{ 'menu.title.restriccion'|trans }}</a></strong>
    </li>
{% endblock %}

{% block body %}
    <div class="ibox">
        <div class="ibox-title">
            <h5>{{ 'menu.title.restriccion'|trans }}</h5>
        </div>
        <div class="ibox-content">

            {% include 'ESocialUtilBundle:flash-messages:_flash.messages.html.twig' %}

            <div class="margin-b">
                <a class="btn btn-white" title="{{ 'restriccion.buttons.add'|trans }}" href="{{ path('restriccion_add') }}">
                    <span class="glyphicon glyphicon-plus"></span>
                    <strong>{{ 'restriccion.buttons.add'|trans }}</strong>
                </a>
            </div>

            <table id="dt-report-list" class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th class="datatable-chk-cell"><input type="checkbox" class="i-checks datatable-chk-select-all" value="all" /></th>
                    <th>{{ 'form.restriccion.label.cliente'|trans }}</th>
                    <th>{{ 'form.restriccion.label.clienteRestriccion'|trans }}</th>
                    <th>{{ 'form.restriccion.label.categoria'|trans }}</th>
                    <th>{{ 'form.restriccion.label.categoriaRestriccion'|trans }}</th>
                    <th>{{ 'form.restriccion.label.pk_ubicacion'|trans }}</th>
                    <th>{{ 'form.restriccion.label.ubicacion'|trans }}</th>
                    <th>{{ 'form.label.actions'|trans }}</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
    <script type="text/javascript">
        var restriccion_list = null;
        $(document).ready(function() {
            var table_columns = [
                {
                    "mData": function (source) {
                        return '<input type="checkbox" class="i-checks" value="'+source.token+'" />';
                    }
                },
                {"mData": "cliente__razon_social"},
                {"mData": "clienteRestriccion__razon_social"},
                {"mData": "categoria__nombre"},
                {"mData": "categoriaRestriccion__nombre"},
                {"mData": "ubicacion__pk_ubicacion"},
                {"mData": "ubicacion__ubicacion"},
                {
                    "mData": function (source) {
                        var actions = '<a class="btn btn-primary btn-xs" href="' + Routing.generate('restriccion_edit', { id: encodeURIComponent(source.token), _locale: '{{ app.request.locale }}' }) + '"><span class="glyphicon glyphicon-edit"></span> &nbsp; {{ 'form.actions.edit'|trans }}</a>&nbsp; ';
                        actions += '<a class="btn btn-primary btn-xs" href="javascript:void(0)" onclick="bootbox.confirm(\'Seguro que desea eliminar el registro?\', function(confirmed){ if(confirmed) executeAjax(\'' + Routing.generate('restriccion_delete', { _locale: '{{ app.request.locale }}', id: encodeURIComponent(source.token) }) + '\', null, null, restriccion_list_reload); }); return false;"><span class="glyphicon glyphicon-remove"></span> &nbsp; {{ 'form.actions.delete'|trans }}</a>&nbsp; ';
                        return actions;
                    }
                }
            ];

            jQuery(document).ready(function(){
                restriccion_list = TableManaged.init(
                        '#dt-report-list',
                        '{{ url('restriccion_list_json') }}',
                        null,
                        [0,7],
                        table_columns,
                        '{{ url('datatables_i18n_fragment', { language: app.request.locale }) }}'
                );
            });
        });

        function restriccion_list_reload(result){
            if (result && result.message){
                var alertType = result.result == 1 ? 'success' : 'danger';
                $(restriccion_list).closest('.dataTables_wrapper').prepend(Notification.alert(alertType, result.message));
            }
            restriccion_list.api().ajax.reload();
        }
    </script>
{% endblock %}